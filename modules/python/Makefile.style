BLACK_TARGETS := $(shell find . -name "*.py" -not -path "*/.venv/*" -not -path "*/.tox/*")

## Check python files using black
python/lint: $(BLACK)
	$(call assert-set,BLACK)
	black --check $(BLACK_TARGETS)

## Fix python files using black
python/fmt: $(BLACK)
	$(call assert-set,BLACK)
	black $(BLACK_TARGETS)
